{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "research": {
      "type": "object",
      "properties": {
        "goal": { "type": "string" },
        "hypotheses": {
          "type": "array",
          "items": { "type": "string" }
        }
      },
      "required": ["goal", "hypotheses"]
    },
    "development": {
      "type": "object",
      "properties": {
        "requirements": {
          "type": "array",
          "items": { "type": "string" }
        }
      },
      "required": ["requirements"]
    }
  },
  "required": ["research", "development"]
}
